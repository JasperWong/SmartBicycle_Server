<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
        "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
    <package name="insert" extends="my-struts" namespace="/user">
        <!-- User 列表页 -->
        <action name="insert" class="com.jasper.ssm.action.LoginAction">
            <!--action 返回值为success时,则返回页面user.jsp,并解析为html展示到网页-->
            <result name="success">/WEB-INF/views/success.jsp</result>
        </action>

    </package>

    <package name="index" extends="my-struts" namespace="/user">

    <!-- User 列表页 -->
    <action name="index" class="com.jasper.ssm.action.UserAction">
        <!--action 返回值为success时,则返回页面user.jsp,并解析为html展示到网页-->
        <result name="success">/WEB-INF/views/user.jsp</result>
    </action>

</package>

    <package name="day" extends="my-struts" namespace="/user">
    <!-- User 列表页 -->
    <action name="day" class="com.jasper.ssm.action.UserDayAction">
        <!--action 返回值为success时,则返回页面user.jsp,并解析为html展示到网页-->
        <result name="success">/WEB-INF/views/userDay.jsp</result>
    </action>

    </package>

    <package name="update" extends="my-struts" namespace="/bicycle">
        <action name="update" class="com.jasper.ssm.action.BicycleInsertAction">
            <result name="success">/WEB-INF/views/success.jsp</result>
        </action>
    </package>

    <package name="query" extends="my-struts" namespace="/bicycle">
        <action name="query" class="com.jasper.ssm.action.BicycleIndexAction">
            <result name="success">/WEB-INF/views/bicycleInfo.jsp</result>
            <result name="photo">/WEB-INF/views/photo.jsp</result>
        </action>
    </package>

    <package name="upload" extends="my-struts" namespace="/trash">

        <action name="upload" class="com.jasper.ssm.action.TrashInsertAction">
            <result name="success">/WEB-INF/views/success.jsp</result>
        </action>
    </package>

    <package name="search" extends="my-struts" namespace="/trash">
        <action name="search" class="com.jasper.ssm.action.TrashIndexAction">
            <result name="success">/WEB-INF/views/trashInfo.jsp</result>
        </action>
    </package>
</struts>